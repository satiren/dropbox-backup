# Dropbox Backup Configuration
# Copy this file to .env and fill in your values
# The app will automatically load this file - no need to run 'source .env'

# REQUIRED: Your Dropbox OAuth2 access token
# Get one from: https://www.dropbox.com/developers/apps
DROPBOX_ACCESS_TOKEN="your-access-token-here"

# REQUIRED: Local directory to save backups
# Leave empty to use folder picker dialog
DROPBOX_BACKUP_DEST=""

# OPTIONAL: Dropbox folder path to backup (empty = entire Dropbox)
DROPBOX_ROOT_PATH=""

# OPTIONAL: Number of concurrent download threads (default: 6)
DROPBOX_CONCURRENT_DOWNLOADS="6"

# OPTIONAL: Maximum GB to download per run (0 = unlimited)
DROPBOX_MAX_GB_PER_RUN="0"

# OPTIONAL: Download timeout in seconds (default: 300)
DROPBOX_TIMEOUT="300"

# OPTIONAL: Maximum retry attempts per file (default: 5)
DROPBOX_MAX_RETRIES="5"
